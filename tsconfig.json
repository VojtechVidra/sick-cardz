{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noEmit": true
  }
}
